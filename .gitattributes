# Set default behavior to automatically normalize line endings
* text=auto

# JavaScript files
*.js text eol=lf

# JSON files
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Docker files
Dockerfile text eol=lf
.dockerignore text eol=lf

# Git config files
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary